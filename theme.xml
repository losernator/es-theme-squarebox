<theme>
	<formatVersion>4</formatVersion>
	<view name="system">
		<image name="background" extra="true">
			<tile>false</tile>
			<size>0 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<path>./assets/images/top_bg.png</path>
		</image>
		<image name="logo">
			<path>./assets/systems/${system.theme}.svg</path>
			<color>ffffff</color>
			<maxSize>0.21815519765 0.6614583</maxSize>
			<origin>0.5 0</origin>
			<pos>0.5 0.169270831</pos>
		</image>
		<text name="systemInfo">
			<fontPath>./assets/NanumSquareB.ttf</fontPath>
			<fontSize>0.070</fontSize>
			<alignment>center</alignment>
			<backgroundColor>00000000</backgroundColor>
			<color>ffffff</color>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.8</pos>
			<size>0.980 0.050</size>
		</text>
		<helpsystem name="help">
			<pos>1 1</pos>
			<textColor>7d7d7d</textColor>
			<iconColor>7d7d7d</iconColor>
		</helpsystem>
	</view>
	<feature supported="carousel">
	<view name="system">
		<carousel name="systemcarousel">
			<type>horizontal</type>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 0.6</size>
			<color>00000000</color>
			<logoScale>1.5</logoScale>
			<logoSize>0.4 0.3</logoSize>
			<logoAlignment>center</logoAlignment>
			<maxLogoCount>2</maxLogoCount>
		</carousel>
	</view>
	</feature>
	<view name="basic, detailed, video, grid">
		<image name="background">
			<path>./assets/images/viewbg_d.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>
		<image name="listbg" extra="true">
			<path>./assets/images/tbox.png</path>		
			<color>272727</color>
			<zIndex>10</zIndex>
		</image>
		
		<image name="logo">		
			<path>./assets/systems/${system.theme}.svg</path>		
			<origin>0.5 0.5</origin>
			<maxSize>0.4 0.15</maxSize>
			<pos>0.28 0.0875</pos>
		</image>

		<helpsystem name="help">
			<pos>2 2</pos>
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontSize>0.023611</fontSize>
		</helpsystem>

	</view>
	<view name="basic, detailed, video">
		<image name="listbg" extra="true">
			<pos>0 0.5</pos>
			<origin>0 0.5</origin>	
			<size>0.5625 1</size>
		</image>
		<image name="logobg" extra="true">
			<path>./assets/images/hline_top.png</path>
			<tile>false</tile>
			<pos>0 0.1291666666666667</pos>
			<origin>0 0.5</origin>
			<size>0.5625 0.125</size>
			<zIndex>12</zIndex>
		</image>
		<image name="listdeco" extra="true">
			<path>./assets/images/list_deco.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>0.5625 1</size>
			<zIndex>14</zIndex>
		</image>

		<text name="helpsystem" extra="true">
			<text>A 실행 | B 뒤로 | X 랜덤 | Y 즐겨찾기</text>
			<fontPath>./assets/NanumSquareEB.ttf</fontPath>
			<color>ffffff</color>
			<fontSize>0.042</fontSize>
			<pos>0.28125 0.95</pos>			
			<origin>0.5 0.5</origin>
			<zIndex>40</zIndex>

		</text>
		<textlist name="gamelist">
			<fontPath>./assets/NanumSquareB.ttf</fontPath>
			<fontSize>0.064</fontSize>
			<horizontalMargin>0.03</horizontalMargin>
			<lineSpacing>1.25</lineSpacing>
			<pos>0.015625 0.1875</pos>
			<size>0.53125 0.70</size>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>bbbbbb</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<selectorColor>ffffff</selectorColor>
			<selectorImagePath>./assets/images/selector.png</selectorImagePath>
			<selectorHeight>0.0833333333333333</selectorHeight>
			<selectorOffsetY>0.009</selectorOffsetY>
			<alignment>left</alignment>
			<zIndex>20</zIndex>
		</textlist> 
	</view>
	<view name="detailed">
		<image name="md_image">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>8</zIndex>
		</image>
	</view>
	<view name="detailed, video">
		<image name="md_marquee" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.78125 0.87</pos>
			<maxSize>0.4375 0.220</maxSize>
			<zIndex>35</zIndex>
		</image>
		<text name="md_publisher, md_lbl_rating, md_lbl_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer, md_lbl_players, md_genre, md_developer, md_players, md_description">
			<pos>1 1</pos>
		</text>
		<datetime name="md_releasedate, md_lastplayed">
			<pos>1 1</pos>
		</datetime>
		<rating name="md_rating">
			<pos>1 1</pos>
		</rating>
	</view>
	
	<feature supported="video">
	<view name="video">
		<video name="md_video">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<delay>0</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<zIndex>9</zIndex>
		</video>
	</view>
	</feature>

	<view name="grid">
		<image name="listbg" extra="true">
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>	
			<size>1 1</size>
		</image>
		<imagegrid name="gamegrid">
			<pos>0.020833333 0.2200</pos>
			<size>0.950 0.644</size>
			<margin>0.02 0.02</margin>
		</imagegrid>
		<gridtile name="default">
				<size>0.173 0.21</size>
				<backgroundColor>00000000</backgroundColor>
		</gridtile>
		<gridtile name="selected">
			<backgroundColor>00000000</backgroundColor>
		</gridtile>
	</view>

</theme>
			
